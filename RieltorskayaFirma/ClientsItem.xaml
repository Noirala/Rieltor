<Window x:Class="RieltorskayaFirma.ClientsItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RieltorskayaFirma"
        mc:Ignorable="d"
        Title="ClientsItem" Height="450" Width="800">
    <Grid>
        <StackPanel
            Margin="10"
            Orientation="Vertical">
            <Label Content="Фамилия"/>
            <TextBox Text="{Binding CurrentClient.FirstName}"/>
            <Label Content="Имя"/>
            <TextBox Text="{Binding CurrentClient.MiddleName}"/>
            <Label Content="Отчество"/>
            <TextBox Text="{Binding CurrentClient.LastName}"/>
            <Label Content="Телефон"/>
            <TextBox Text="{Binding CurrentClient.Phone}"/>
            <Label Content="EMail"/>
            <TextBox Text="{Binding CurrentClient.EMail}"/>
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
